<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="2.2" xmlns="http://xmlns.jcp.org/xml/ns/javaee"
              xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
              xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
    http://xmlns.jcp.org/xml/ns/javaee/web-facesconfig_2_2.xsd">
    <navigation-rule>
        <from-view-id>/home.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.newUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authBean.signIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/user-register.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.createUser}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authBean.user.userType.id == 1}</if>
            <to-view-id>/index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.createUser}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authBean.user.userType.id == 2}</if>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.createUser}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authBean.signIn}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/user/user-login.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{authBean.authentication}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authBean.user.userType.id == 1}</if>
            <to-view-id>/user-index.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authBean.authentication}</from-action>
            <from-outcome>success</from-outcome>
            <if>#{authBean.user.userType.id == 2}</if>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{authBean.authentication}</from-action>
            <from-outcome>error</from-outcome>
            <to-view-id>/user/user-login.xhtml</to-view-id>
        </navigation-case>
        <navigation-case>
            <from-action>#{userBean.newUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/user/user-register.xhtml</to-view-id>
        </navigation-case>
    </navigation-rule>


    <!--event-->
    <navigation-rule>
        <from-view-id>/eventIndex.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{eventsBean.newEvent}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventNew.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.deleteEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.cancelEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
        <navigation-case>
            <from-action>#{eventsBean.editEvent(event)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventEdit.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventEdit.xhtml</from-view-id>
        <navigation-case>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventNew.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{eventsBean.createEvent}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <navigation-rule>
        <from-view-id>/eventIndex.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.editUser(userBean.authBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventNew.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.editUser(userBean.authBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/eventEdit.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.editUser(userBean.user)}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/profile.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
    <navigation-rule>
        <from-view-id>/profile.xhtml</from-view-id>
        <navigation-case>
            <from-action>#{userBean.updateUser}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/eventIndex.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>

    <!--logout-->
    <navigation-rule>
        <navigation-case>
            <from-action>#{authBean.logout}</from-action>
            <from-outcome>success</from-outcome>
            <to-view-id>/home.xhtml</to-view-id>
            <redirect/>
        </navigation-case>
    </navigation-rule>
</faces-config>